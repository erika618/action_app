            <%= f.label :restart_4, 'restart!', class: "label_restart_4" %>
          </div>
        </ul>
          <div>
            <p><%= @rule.if_4 %></p>
            <p><%= @rule.then_4 %></p>
          </div>
      </div>
      <div class="habit5_content">
        <ul><h1 class="text_habit">マインド</h1>
          <div class="habit5_content_count">
            <%= f.check_box :count_5, checked: true, class: "count_5" %>
