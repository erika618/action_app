<div class="wrapper">
  <%= render "shared/login_after_header" %>

  <%= form_with(model: @habit, local: true) do |f| %>
      <div class="save_center_content"><%= f.submit "S A V E" , class:"save_center", id:"save_center"%></div>
      <div class="save_setting_content"><%= link_to rules_path, class:"setting_center", id:"setting_center" do %><%= image_tag "setting.png", size:'24x24'%>イフゼンルールの設定<% end %></div>
    <div class="habit_main" id="habit_main">
      <div class="habit1_content">
        <ul><h1 class="text_habit">食事</h1>
          <div class="habit1_content_count">
            <%= f.check_box :count_1, checked: true, class: "count_1" %>
            <%= f.label :count_1, 'done!', class: "label_count_1" %>
            <br>
            <%= f.check_box :restart_1, checked: false, class: "restart_1" %>
            <%= f.label :restart_1, 'restart!', class: "label_restart_1" %>
          </div>
        </ul>
          <div>
            <p><%= @rule.if_1 %></p>
            <p><%= @rule.then_1 %></p>
          </div>
      </div>
      <div class="habit2_content">
        <ul><h1 class="text_habit">睡眠</h1>
