          <div class="habit3_content_count">
            <%= f.check_box :count_3, checked: true, class: "count_3" %>
            <%= f.label :count_3, 'done!', class: "label_count_3" %>
            <br>
            <%= f.check_box :restart_3, checked: false, class: "restart_3" %>
            <%= f.label :restart_3, 'restart!', class: "label_restart_3" %>
          </div>
        </ul>
          <div>
            <p><%= @rule.if_3 %></p>
            <p><%= @rule.then_3 %></p>
          </div>
      </div>
      <div class="habit4_content">
        <ul><h1 class="text_habit">学び</h1>
